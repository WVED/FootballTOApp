<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FootballTicketApp.MainPage">

    <StackLayout>
        <ListView x:Name="LViewMatches" ItemSelected="LViewMatches_ItemSelected" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Team.Title}" FontSize="18"></Label>
                            <Label Text=" - " VerticalTextAlignment="Top" Margin="0,-5,0,30" FontSize="18"></Label>
                            <Label Text="{Binding Team1.Title}" FontSize="18"></Label>
                            <Image HeightRequest="20" Source="{Binding Image}" HorizontalOptions="FillAndExpand"></Image>
                            <Image HeightRequest="20" Source="{Binding Image}" HorizontalOptions="FillAndExpand"></Image>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
